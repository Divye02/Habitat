<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".progressBar">



    <ImageButton
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:id="@+id/button"
        android:src="@drawable/checkmark"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ProgressBar
        android:id="@+id/bar1"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:indeterminate="false"
        android:progressDrawable="@drawable/progressbar"
        android:background="@drawable/progressbar_background"
        style="?android:attr/progressBarStyleHorizontal"
        android:max="100"
        android:progress="0" />



    <ProgressBar
        android:id="@+id/bar2"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:indeterminate="false"
        android:progressDrawable="@drawable/redprogressbar"
        android:background="@drawable/redprogressbar_background"
        style="?android:attr/progressBarStyleHorizontal"
        android:max="100"
        android:progress="0" />
    <ProgressBar
        android:id="@+id/bar3"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:indeterminate="false"
        android:progressDrawable="@drawable/completedbar"
        android:background="@drawable/completedbar_background"
        style="?android:attr/progressBarStyleHorizontal"
        android:max="100"
        android:progress="0"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0"
        android:id="@+id/days_total"
        android:layout_marginBottom="76dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0"
        android:id="@+id/days_progress"
        android:layout_above="@+id/days_total"
        android:layout_alignLeft="@+id/days_skipped"
        android:layout_alignStart="@+id/days_skipped" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0"
        android:id="@+id/days_skipped"
        android:layout_above="@+id/days_total"
        android:layout_alignLeft="@+id/days_total"
        android:layout_alignStart="@+id/days_total"
        android:layout_marginBottom="15dp" />




</RelativeLayout>
