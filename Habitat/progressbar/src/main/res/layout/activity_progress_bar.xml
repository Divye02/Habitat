<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".progressBar">



    <ProgressBar
        android:id="@+id/bar1"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:indeterminate="false"
        android:progressDrawable="@drawable/progressbar"
        android:background="@drawable/progressbar_background"
        style="?android:attr/progressBarStyleHorizontal"
        android:max="100"
        android:progress="0" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="89dp"
        android:layout_marginStart="89dp" />

    <ProgressBar
        android:id="@+id/bar2"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:indeterminate="false"
        android:progressDrawable="@drawable/redprogressbar"
        android:background="@drawable/redprogressbar_background"
        style="?android:attr/progressBarStyleHorizontal"
        android:max="100"
        android:progress="0" />
    <ProgressBar
        android:id="@+id/bar3"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:indeterminate="false"
        android:progressDrawable="@drawable/completedbar"
        android:background="@drawable/completedbar_background"
        style="?android:attr/progressBarStyleHorizontal"
        android:max="100"
        android:progress="0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of days passed = "
        android:id="@+id/textView"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/button"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of days "
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="17dp" />


</RelativeLayout>
