<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:nestedScrollingEnabled="true"
    android:background="#191919"
    tools:context=".progressBar">



    <ProgressBar
        android:id="@+id/bar2"
        android:visibility="invisible"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:indeterminate="false"
        android:progressDrawable="@drawable/progressbar2"
        android:background="@drawable/progressbar2_background"
        style="?android:attr/progressBarStyleHorizontal"
        android:max="100"
        android:progress="0" />

    <ProgressBar
        android:id="@+id/bar3"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:indeterminate="false"
        android:progressDrawable="@drawable/progressbar3"
        android:background="@drawable/progressbar3_background"
        style="?android:attr/progressBarStyleHorizontal"
        android:max="100"
        android:progress="0"
        android:visibility="invisible"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <ProgressBar
        android:id="@+id/bar1"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:indeterminate="false"
        android:visibility="visible"
        android:progressDrawable="@drawable/progressbar"
        android:background="@drawable/progressbar_background"
        style="?android:attr/progressBarStyleHorizontal"
        android:max="100"
        android:progress="65" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/levelNumber"
        android:textColor="#ffffff"

        android:textSize="75dp"
        android:maxWidth="100dp"
        android:minHeight="80dp"
        android:layout_marginTop="175dp"
        android:layout_alignTop="@+id/bar1"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff"
        android:textSize="75dp"
        android:fontFamily="sans-serif-thin"
        android:text="Level"
        android:id="@+id/Level"
        android:layout_below="@+id/levelNumber"
        android:layout_centerHorizontal="true"
        android:longClickable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff"
        android:textSize="50dp"
        android:text="Achievements"
        android:fontFamily="sans-serif-thin"
        android:id="@+id/textView"
        android:layout_alignTop="@+id/bar2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />

